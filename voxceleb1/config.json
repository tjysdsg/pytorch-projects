{
  "name": "voxceleb1",
  "seed": 1024,
  "dataset": {
    "type": "FbankDataset",
    "args": {
      "wav_scp": "voxceleb1/data/vox1_train/wav.scp",
      "utt2spk": "voxceleb1/data/vox1_train/utt2spk"
    },
    "valid_split": 0.2
  },
  "model": {
    "type": "Gvector",
    "args": {
    }
  },
  "dataloader": {
    "type": "SimpleDataLoader",
    "args": {
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 0.001,
      "weight_decay": 0,
      "amsgrad": true
    }
  },
  "loss": {
    "type": "CrossEntropyLoss",
    "args": {
    }
  },
  "metrics": [
    "accuracy",
    "top_k_acc"
  ],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 50,
      "gamma": 0.1
    }
  },
  "trainer": {
    "epochs": 100,
    "save_dir": "models/",
    "save_freq": 1,
    "verbosity": 2,
    "save_period": 1,
    "log_step": 60,
    "monitor": "min val_loss",
    "early_stop": 10,
    "tensorboard": true
  }
}