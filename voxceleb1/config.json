{
  "name": "voxceleb1",
  "seed": 1024,
  "dataset": {
    "type": "FbankDataset",
    "args": {
      "wav_scp": "voxceleb1/data/vox1_train/wav.scp",
      "utt2spk": "voxceleb1/data/vox1_train/utt2spk"
    },
    "valid_split": 0.2
  },
  "model": {
    "type": "Gvector",
    "args": {
      "drop": 0
    }
  },
  "dataloader": {
    "type": "SimpleDataLoader",
    "args": {
    }
  },
  "optimizer": {
    "type": "SGD",
    "args": {
      "lr": 0.001,
      "momentum": 0.9,
      "nesterov": true
    }
  },
  "loss": {
    "type": "CrossEntropyLoss",
    "args": {
    }
  },
  "metrics": [
    "accuracy",
    "top_k_acc"
  ],
  "lr_scheduler": {
    "type": "ReduceLROnPlateau",
    "args": {
      "patience": 2,
      "verbose": true,
      "min_lr": 1e-4
    }
  },
  "trainer": {
    "epochs": 100,
    "save_dir": "models/",
    "save_freq": 1,
    "verbosity": 2,
    "save_period": 1,
    "log_step": 60,
    "monitor": "min val_loss",
    "early_stop": 10,
    "tensorboard": false
  }
}